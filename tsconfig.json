{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "include": ["src"],

  "skipLibCheck": true,
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": true
  }
}
